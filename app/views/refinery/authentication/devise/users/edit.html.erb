// <%= render 'form' %>

<% content_for :profile_form do %>
  <%= render partial: '/shared/navbar' %>

  <%= form_for @user, url: '/users/' + @user.id.to_s do |f| %>
  <div class="edit_profile">
    <% if !flash[:error].blank? %> 
      <div class="alert bg-danger">
        <%= raw flash[:error] %>
      </div> 
    <% elsif !flash[:success].blank? %>
      <div class="alert alert-info">
        <%= raw flash[:success] %>
      </div> 
    <% end %>
    <h2>Personal Particulars</h2>
    <div class="fields">
      <%= f.label :username, :class=> 'field_type' %>
      <div class="input_container">
        <i class="material-icons">account_circle</i>
        <%= f.text_field :username, :class => 'larger widest profile_input'%>
      </div>
    </div>
    <div class="fields">
      <%= f.label :full_name, :class=> 'field_type' %>
      <div class="input_container">
        <i class="material-icons">face</i>
        <%= f.text_field :full_name, :class => 'larger widest profile_input' %>
      </div>
    </div>
    <div class="fields">
      <%= f.label :email, :class=> 'field_type' %>
      <div class="input_container">
        <i class="material-icons">email</i>
        <%= f.text_field :email, :class => 'larger widest profile_input' %>
      </div>
    </div>
    <div class="fields">
      <%= f.label :phone, :class=> 'field_type' %>
      <div class="input_container">
        <i class="material-icons">phone</i>
        <%= f.number_field :phone, :autocomplete => 'off', :class => 'larger widest profile_input', :id => 'profile_phone' %>
      </div>
    </div>
    <div class="fields">
      <%= f.label :company, :class=> 'field_type' %>    
      <div class="input_container">
        <i class="material-icons">account_balance</i>
        <%= f.text_field :company, :autocomplete => 'off', :class => 'larger widest profile_input' %>
      </div>
    </div>
    <div class="fields">
      <%= f.label :password, 'Password (leave blank to keep current)', :class=> 'field_type' %>
      <div class="input_container">
        <i class="material-icons">lock</i>
        <%= f.password_field :password, :autocomplete => 'off', :class => 'larger widest profile_input', :id => 'profile_password' %>
      </div>
    </div>
    <div class="fields">
      <%= f.label :password_confirmation, :class=> 'field_type' %>
      <div class="input_container">
        <i class="material-icons">lock</i>
        <%= f.password_field :password_confirmation, :autocomplete => 'off', :class => 'larger widest profile_input', :id => 'profile_confirm_password' %>

      </div>
    </div>
    <%= f.submit "Save", url: '/users/' + @user.id.to_s, class: 'btn', method: 'PATCH' %>
  </div>
<% end %>
<% end %>