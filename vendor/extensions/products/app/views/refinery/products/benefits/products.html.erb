<%= content_for(:page_buttons) do %>
    <ul class="pull-left navbar-justlogin">
      <li>
        <button class="btn btn-link back-button" data-previous-step="/">Previous</button>
      </li>
    </ul>
    <ul class="pull-right navbar-justlogin">
      <li>
        <%=product_continue_button%>
      </li>
      <li class="compare-parent">
        <button class="btn compare-button">Compare</button>
        <div class="compare-tooltip-arrow"></div>
        <div class="compare-tooltip">Select up to 4 to compare</div>
      </li>
      <li>
        <button class="btn clear-selected">Clear</button>
      </li>
    </ul>
<% end %>

<%= form_tag('/process/step2', method: :post, id: 'step2') do %>
    <div id="product-listing">
    <div class="container products-display">
      <div class="row">
        <div class="col-sm-12">

          <div class="">

            <% @products.in_groups_of(4, false) do |group_of_products| %>
                <div class="row">
                  <% group_of_products.each do |product| %>
                      <div class="col-sm-3 col-xs-3">
                        <%= render partial: 'product', locals: { product: product } %>
                      </div>
                  <% end %>
                </div>
            <% end %>
            <div class="clearfix"></div>
          </div>

        </div>
      </div>
    </div>
    </div>
<% end %>


<% if false %>
    <% content_for :body do %>
        <ul id="products">
          <% @products.each do |product| %>
              <li>
                <%= link_to product.name, refinery.products_product_path(product) %>
              </li>
          <% end %>
        </ul>
    <% end %>

    <%= render '/refinery/content_page' %>
<% end %>