<div class="product-wrapper selection">
  <div class="product-ribbon"><%=product.special%></div>
  <div class="product-header">
    <div class="img">
      <% if product.logo %>
          <%= image_tag(product.logo.image.remote_url, width: 80, height: 80) %>
      <% else %>
          <img src="http://placehold.it/80x80">
      <% end %>
    </div>
    <div class="name">
      <h2><%= product.insurer %></h2>
      <h3><%= product.name %></h3>
    </div>
    <div class="clearfix"></div>
    <h2 class="premium">
      <%= number_to_currency(product.premium, unit: '$', precision: 0) %>
      <span>/month</span>
    </h2>
  </div>
  <div class="product-body">
    <ul>
      <% product.product_summary_feature_products.each do |feature| %>
          <li>
            <div class="policy-detail-title"><%= feature.feature_name %></div>
            <div class="policy-detail-value"><%= feature.value %></div>
          </li>
      <% end %>
    </ul>
  </div>
  <div class="product-footer">
    <div class="pull-left">
      <a class="more-details">More details</a>
    </div>
    <div class="pull-right">
      <%=input_select_product(product)%>
      <strong>Select</strong>
    </div>
    <div class="clearfix"></div>
  </div>
</div>