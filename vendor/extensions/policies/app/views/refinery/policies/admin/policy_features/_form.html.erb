<%= simple_form_for [refinery, :policies_admin, @policy_feature] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @policy_feature,
              :include_object_name => true %>

  <%=f.input :name, input_html: { class: 'larger widest'}%>
  <%=f.association :policy_feature_group,  input_html: { class: 'larger widest'}%>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.policy_features.admin.policy_features.policy_feature'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @policy_feature.name) -%>
<% end -%>
