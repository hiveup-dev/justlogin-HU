<%= form_for [refinery, :policies_admin, @claim] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @claim,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "policies/claim" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.claims.admin.claims.claim'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @claim.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
