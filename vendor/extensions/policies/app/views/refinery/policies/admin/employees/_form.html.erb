<%= simple_form_for [refinery, :policies_admin, @employee] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @employee,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <%= f.input :user_id, collection: Refinery::Authentication::Devise::User.all, input_html: { class: 'larger widest' } %>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.employees.admin.employees.employee'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @employee.name) -%>
<% end -%>
