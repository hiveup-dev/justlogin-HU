<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(policy_feature) -%>">
  <span class='title'>
    <%= policy_feature.name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.policies_policy_feature_path(policy_feature), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_policies_admin_policy_feature_path(policy_feature), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.policies_admin_policy_feature_path(policy_feature), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: policy_feature.name)}}  ) %>
  </span>
</li>
