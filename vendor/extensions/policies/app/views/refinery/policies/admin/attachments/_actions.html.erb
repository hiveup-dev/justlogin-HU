<ul>
  <% if ::Refinery::Policies::Admin::AttachmentsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.policies_admin_attachments_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_policies_admin_attachment_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Policies::Admin::AttachmentsController.sortable? && ::Refinery::Policies::Attachment.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.policies_admin_attachments_path,
                     t('.reorder', what:  "Attachments"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.policies_admin_attachments_path,
                      t('.reorder_done', what: "Attachments"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
