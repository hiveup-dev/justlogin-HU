<%= form_for [refinery, :policies_admin, @policy_feature_group] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @policy_feature_group,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.policy_feature_groups.admin.policy_feature_groups.policy_feature_group'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @policy_feature_group.name) -%>
<% end -%>
