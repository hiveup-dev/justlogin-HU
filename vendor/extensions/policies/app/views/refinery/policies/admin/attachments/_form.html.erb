<%= form_for [refinery, :policies_admin, @attachment] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @attachment,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :file -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :file_id,
               :resource => @attachment.file -%>
  </div>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.attachments.admin.attachments.attachment'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @attachment.name) -%>
<% end -%>
