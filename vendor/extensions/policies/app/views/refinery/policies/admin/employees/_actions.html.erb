<ul>
  <% if ::Refinery::Policies::Admin::EmployeesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.policies_admin_employees_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_policies_admin_employee_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Policies::Admin::EmployeesController.sortable? && ::Refinery::Policies::Employee.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.policies_admin_employees_path,
                     t('.reorder', what:  "Employees"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.policies_admin_employees_path,
                      t('.reorder_done', what: "Employees"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
