<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(policy) -%>">
  <span class='title'>
    <%= policy.name %>
  </span>

  <span class='preview' style="position:absolute; left:250px; right:250px;"><%= policy.employee.name %></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.policies_policy_path(policy), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_policies_admin_policy_path(policy), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.policies_admin_policy_path(policy), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: policy.name)}}  ) %>
  </span>
</li>
