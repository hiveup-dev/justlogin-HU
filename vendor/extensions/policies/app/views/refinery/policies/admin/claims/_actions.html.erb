<ul>
  <% if ::Refinery::Policies::Admin::ClaimsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.policies_admin_claims_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_policies_admin_claim_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Policies::Admin::ClaimsController.sortable? && ::Refinery::Policies::Claim.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.policies_admin_claims_path,
                     t('.reorder', what:  "Claims"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.policies_admin_claims_path,
                      t('.reorder_done', what: "Claims"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
