<% content_for :body_content_title do %>
  <%= @attachment.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>File</h1>
    <p>
      <% if @attachment.file.present? %>
        <%= link_to 'file', @attachment.file.url %>
      <% else %>
        file
      <% end %>
    </p>
  </section>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @attachment.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="attachments">
      <% @attachments.each do |attachment| %>
        <li>
          <%= link_to attachment.name, refinery.policies_attachment_path(attachment) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
