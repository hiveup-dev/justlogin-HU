<% content_for :body_content_title do %>
  <%= @policy_feature.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @policy_feature.name %>
    </p>
  </section>
  <section>
    <h1>Policy Feature Group</h1>
    <p>
      <%=raw @policy_feature.policy_feature_group_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="policy_features">
      <% @policy_features.each do |policy_feature| %>
        <li>
          <%= link_to policy_feature.name, refinery.policies_policy_feature_path(policy_feature) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
